<div class="row">
    <div class="col-md-offset-4 col-md-3">
        <form class="form-signin" method="post">
            <h2 class="form-signin-heading">Please sign in</h2>
            {%  if (isLoginError) %}
            <div class="alert alert-warning" role="alert">
                Incorrect login and/or password.
                <a href="{{  url('reset-password') }}">Forgot password?</a>
            </div>
            {% endif %}
            {{  formLabel(form.get('email')) }}
            {{  formElement(form.get('email')) }}


            {{  formLabel(form.get('password')) }}
            {{  formElement(form.get('password')) }}
            <div class="checkbox">
                <label>
                    {{  formElement(form.get('remember_me')) }} Remember me
                </label>
            </div>
            {{  formElement(form.get('redirect_url')) }}
            {{  formElement(form.get('csrf')) }}

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
    </div>
</div>